<% content_for :scripts do %>
  <script>
    var words = [
      "guesswork",
      "headache"
    ];
    var lastWord = words[0];

    function updateProblem(problems) {
      var problem = problems.pop();

      $('.problem span').animate({
        opacity: 0
      }, 700, 'swing', function() {
        $('.problem span').text(problem);

        $('.problem span').animate({
          opacity: 1
        }, 700, 'swing', function() {
          if (problem !== lastWord) {
            setTimeout(function() {
              updateProblem(problems);
            }, 2500);
          }
        });
      });
    }

    setTimeout(function() {
      updateProblem(words);
    }, 2500);
  </script>
<% end %>
